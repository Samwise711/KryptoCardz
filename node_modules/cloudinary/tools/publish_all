#!/usr/bin/env zsh
local back=$PWD
local script_base=$0:a:h
changes=$(${script_base}/last_change | tail -n +4)
version=$(${script_base}/last_changelog_version)
DEV_ROOT=$HOME/Development
cd $DEV_ROOT
for repo ( $DEV_ROOT/cloudinary_js $DEV_ROOT/pkg/*) {
  cd $repo
  git commit -a -m "Version $version"
  git tag $version -a -m "$changes"
  git push && git push --tags
  npm publish
  cd $back
}